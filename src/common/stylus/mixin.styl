border-t-1px($color)
    position: relative
    &:before 
        display: block
        position: absolute
        left: 0
        top: 0
        width: 100%
        border-top: 1px solid $color
        content: ' '

border-b-1px($color)
    &:after
        display: block
        position: absolute
        left:0
        bottom:0
        width: 100%
        border-top: 1px solid $color
        content: ''